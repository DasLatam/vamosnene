---
const { title = "Colapinto Hub", description = "F1 en castellano: calendario, clima, noticias y contexto en vivo." } = Astro.props;
const apiBase = import.meta.env.PUBLIC_API_BASE;
---
<!doctype html>
<html lang="es-AR">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={Astro.url.toString()} />
    <style>
      :root { color-scheme: light dark; }
      body { font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, sans-serif; margin: 0; line-height: 1.45; }
      header, main, footer { max-width: 980px; margin: 0 auto; padding: 16px; }
      header { display: flex; gap: 12px; align-items: baseline; justify-content: space-between; border-bottom: 1px solid rgba(127,127,127,.25); }
      nav a { margin-right: 12px; text-decoration: none; }
      .card { border: 1px solid rgba(127,127,127,.25); border-radius: 12px; padding: 12px; margin: 12px 0; }
      .grid { display: grid; gap: 12px; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); }
      .pill { display:inline-block; padding:2px 10px; border-radius:999px; border:1px solid rgba(127,127,127,.35); font-size: 12px; }
      .muted { opacity: .75; }
      .btn { display:inline-block; padding:10px 12px; border-radius:10px; border:1px solid rgba(127,127,127,.35); text-decoration:none; }
      .btn.primary { background: #2b7; color: #041; border-color: #2b7; }
      input, button { font: inherit; }
    </style>

    <!-- AdSense: pegar acá el script cuando te aprueben -->
    <!-- <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-XXXX" crossorigin="anonymous"></script> -->
  </head>
  <body>
    <header>
      <div>
        <strong>Colapinto Hub</strong> <span class="muted">MVP</span>
      </div>
      <nav>
        <a href="/live">Live</a>
        <a href="/calendar/2026">Calendario</a>
        <a href="/news">Noticias</a>
        <a href="/merch">Merch</a>
        <a href="/alerts">Avisos</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="muted">
      <div>© {new Date().getFullYear()} Colapinto Hub. No afiliado a Formula 1.</div>
      <div>
        <a href="/privacy">Privacidad</a> · <a href="/terms">Términos</a> · <a href="/about">Sobre</a> · <a href="/contact">Contacto</a>
      </div>
      <div class="muted">API: {apiBase}</div>
    </footer>
  </body>
</html>
