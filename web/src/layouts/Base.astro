---
import "../styles/theme.css";

const {
  title = "Vamos Nene — Colapinto Hub (AR)",
  description = "Agenda 2026, noticias de Colapinto, clima del circuito y contexto en vivo. Sitio fan no oficial.",
  canonical = Astro.url.toString(),
} = Astro.props;

const nav = [
  { href: "/vivo", label: "Vivo" },
  { href: "/calendario/2026", label: "Calendario 2026" },
  { href: "/noticias", label: "Noticias" },
  { href: "/suscribirme", label: "Suscribirme" },
  { href: "/tienda", label: "Tienda" },
  { href: "/about", label: "Historia" },
];
---
<!doctype html>
<html lang="es-AR">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="canonical" href={canonical} />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta name="twitter:card" content="summary_large_image" />
    <title>{title}</title>

    <script type="application/ld+json" set:html={JSON.stringify({
      "@context":"https://schema.org",
      "@type":"WebSite",
      "name":"Vamos Nene",
      "url":"https://vamosnene.pages.dev/",
      "inLanguage":"es-AR",
      "description":description
    })}></script>
  </head>

  <body>
    <header class="container" style="padding-bottom:8px;">
      <div class="card" style="padding:14px; display:flex; align-items:center; justify-content:space-between; gap:12px;">
        <a href="/" class="btn" style="border-color: rgba(246,180,10,.35); background: linear-gradient(135deg, rgba(246,180,10,.20), rgba(116,172,223,.18));">
          <span style="display:inline-flex; align-items:center; gap:10px;">
            <span style="width:10px;height:10px;border-radius:999px;background:var(--sun); box-shadow: 0 0 0 5px rgba(246,180,10,.18);"></span>
            <span style="font-weight:950;">Vamos Nene</span>
            <span class="badge" title="Número 43">43</span>
          </span>
        </a>

        <nav style="display:flex; flex-wrap:wrap; gap:10px; justify-content:flex-end;">
          {nav.map((n) => (<a href={n.href} class="badge">{n.label}</a>))}
        </nav>
      </div>
    </header>

    <main class="container" style="padding-top:8px;">
      <slot />
    </main>

    <footer class="container" style="padding-top:0;">
      <div class="card" style="padding:16px;">
        <div class="grid grid-3">
          <div>
            <div style="font-weight:950;">Mapa del sitio</div>
            <div class="small" style="margin-top:6px;">
              {nav.map((n, i) => (
                <span>
                  <a href={n.href} style="text-decoration:underline;">{n.label}</a>{i < nav.length-1 ? " · " : ""}
                </span>
              ))}
            </div>
          </div>
          <div>
            <div style="font-weight:950;">Legales</div>
            <div class="small" style="margin-top:6px;">
              <a href="/privacy" style="text-decoration:underline;">Privacidad</a> ·
              <a href="/terms" style="text-decoration:underline;">Términos</a> ·
              <a href="/contact" style="text-decoration:underline;">Contacto</a>
            </div>
          </div>
          <div>
            <div style="font-weight:950;">Disclaimer</div>
            <div class="small" style="margin-top:6px; line-height:1.5;">
              Nota: no somos un sitio oficial ni afiliado a Formula 1/FIA ni a equipos. Fuentes acreditadas en cada nota.
            </div>
          </div>
        </div>

        <div class="hr"></div>
        <div class="small">© {new Date().getFullYear()} Vamos Nene — fan hub argentino.</div>
      </div>
    </footer>
  </body>
</html>
